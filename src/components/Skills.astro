---
import JSON_FILE from "../../data/cv.json";
const skills = JSON_FILE.skills;
---

<h2 class="title">Habilidades</h2>
<div class="skills">
    {skills.map((skill) => (
        <div class="skill-card">
            <span class="skill-name">{skill.name}</span>
            <img class="logo-image" src={skill.logo} alt={skill.name} />
        </div>
    ))}
</div>

<style>
  *{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Arial', sans-serif;
  }
  .title{
    display: flex;
    justify-content: left;
    width: 570px;
  }
  .skills{
    display: grid;
    width: 100%;
    max-width: 600px;
    height: auto;
    grid-template-columns: repeat(5, 1fr);
    grid-gap: 10px;
    justify-content: center;
    margin-bottom: 40px;
    padding: 20px;
  }

  .skill-card{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #f8f8f8;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 15px;
  }
  .skill-card:hover {
    background-color: #eeeeee;
  }
  .skill-info {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .skill-name {
    font-size: 1.2rem;
    font-weight: bold;
    color: #333;
    margin-bottom: 10px;
  }
  .logo-image{
    width: 40px;
    height: 40px;
    object-fit: contain;
  }
</style>
